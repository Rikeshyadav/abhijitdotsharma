<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/but2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/text1"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/waste_management"
        android:textColor="@color/white"
        android:textSize="29sp" />

    <Button
        android:id="@+id/govern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@drawable/but4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_above="@id/citizen"
        android:text="Government"
        android:textSize="19sp" />

    <Button
        android:id="@+id/citizen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
android:background="@drawable/but4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="Citizen"
        android:textSize="19sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/citizen"
        android:layout_marginTop="416dp"
        android:text="about us"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

</RelativeLayout>
