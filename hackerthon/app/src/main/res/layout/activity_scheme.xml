<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@drawable/but3"
    android:layout_height="match_parent"
    tools:context=".Scheme">
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/scheme_"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/yu"
        android:layout_margin="10dp"
        android:background="@drawable/text1"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_scheme_available"
        android:padding="10dp"
        android:layout_below="@id/yu"
        android:layout_centerHorizontal="true"

        android:gravity="center"
        android:textSize="20sp"

        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="#C1B1B1"/>


</RelativeLayout>